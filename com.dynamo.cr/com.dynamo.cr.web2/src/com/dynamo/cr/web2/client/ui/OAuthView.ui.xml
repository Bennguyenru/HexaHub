<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style>
        .guid {
            font-size: 0.8em;
            width: 20em;
        }
        .loader {
            margin: 8px;
        }
        .eula {
            width: 960px;
            height: 300px;
            overflow: scroll;
            overflow-x: hidden;
        }
    </ui:style>

    <g:HTMLPanel>
        <g:DeckPanel ui:field="deckPanel" width="100%">

            <g:HTMLPanel>
                <h2>Confirm Registration</h2>

                <div class="row">
                    <div class="span12">
                        Welcome <g:InlineLabel ui:field="firstNameLabel" text="FIRST"></g:InlineLabel> <g:InlineLabel ui:field="lastNameLabel" text="LAST"></g:InlineLabel> (<i><g:InlineLabel ui:field="emailLabel" text="test@example.com"></g:InlineLabel></i>)
                    </div>
                </div>

                <div style="height: 18px"></div>
                <div class="row">
                    <div class="span8">
	                    <g:FlowPanel>
	                        <g:Image url="/images/ajax-loader.gif" styleName="{style.loader}" ui:field="loader"></g:Image>
	                        <g:HTMLPanel ui:field="eula" styleName="{style.eula} well">
	                        </g:HTMLPanel>
	                    </g:FlowPanel>
	                </div>
                </div>

                <g:HTMLPanel styleName="row" ui:field="registrationKeyBox">
                    <div class="span10">
	                    <div class="alert alert-success">
	                    If you don't have a registration key. Please go to this <a href="/signup">page</a> to sign up first.
	                    Registration key is currently required as we are in limited open beta.<br/>
	                    If the maximum user count isn't
	                    reached we'll send you a registration key immediately.
	                    </div>
	                    <div class="formLabel"><b>Registration Key</b></div>
	                    <g:TextBox ui:field="registrationKey" styleName="{style.guid}"/>
                    </div>
                </g:HTMLPanel>

                <div class="row">
                    <div class="span8">
                        <g:Button ui:field="registerButton" styleName="btn btn-primary">Register and Accept Terms</g:Button>
                    </div>
                </div>
            </g:HTMLPanel>

            <g:HTMLPanel>
                <div class="row">
                    <div class="span8">
                        <h2>Login successful</h2>
                    </div>
                </div>
            </g:HTMLPanel>
        </g:DeckPanel>

    </g:HTMLPanel>
</ui:UiBinder>
