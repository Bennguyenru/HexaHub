<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g="urn:import:com.google.gwt.user.client.ui">

    <g:HTMLPanel>
	    <div id="account" class="account-container">
	        <!-- <g:Image ui:field="gravatar" styleName="avatar" url="http://www.gravatar.com/avatar/123?s=64" data-original-title="Avatar from gravatar.com"></g:Image> -->
	        <img ui:field="gravatarImage" src="http://www.gravatar.com/avatar/123?s=48" class="avatar"
	            data-original-title="Avatar from gravatar.com" />
	        <div class="account-info"><g:Label ui:field="name">Bob Gamer</g:Label></div>
	    </div>
	    <div class="well sidebar-nav">
	        <ul id="sideBarList" class="nav nav-list">
	            <li class="nav-header">Dashboard</li>
	            <li id="projects"><g:InlineHyperlink targetHistoryToken=""><i class="icon-folder-open"></i> Projects</g:InlineHyperlink></li>
                <li id="downloads"><g:InlineHyperlink targetHistoryToken="downloads:"><i class="icon-download"></i> Downloads</g:InlineHyperlink></li>
                <li id="invite"><g:InlineHyperlink targetHistoryToken="invite:"><i class="icon-envelope"></i> Invite</g:InlineHyperlink></li>
                <li id="settings"><g:InlineHyperlink targetHistoryToken="settings:"><i class="icon-list-alt"></i> Settings</g:InlineHyperlink></li>
	        </ul>
	    </div>

    </g:HTMLPanel>
</ui:UiBinder>

