<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
    xmlns:g='urn:import:com.google.gwt.user.client.ui' xmlns:p1="urn:import:com.google.gwt.user.cellview.client"
    xmlns:p2="urn:import:com.dynamo.cr.web2.client.ui">

    <ui:style>
        .important {
            font-weight: bold;
        }

        .suggest {
	       width: 22em;
        }

        .panel {
	       min-height: 400px;
	    }

	    .focusPanel {
            outline: 0;
        }

        .libraryUrl {
	       width: 20em;
	    }
    </ui:style>

    <g:HTMLPanel styleName="{style.panel}">
        <div class="row">
            <div class="span3">
                <p2:SideBar ui:field="sideBar"></p2:SideBar>
            </div>
            <div class="span9">
                <div class="row">
                    <div class="span7">
                        <g:DeckPanel ui:field="projectNameDeck">
                            <g:FocusPanel ui:field="projectNameDescription" addStyleNames="{style.focusPanel}">
    	                        <g:HTMLPanel>
	                               <div class="page-header">
		                             <h1 ui:field="projectName" style="width: 100%;" />
		                            </div>
				    		        <p>
					   	               <div style="white-space: pre;" ui:field="description" text="Some description" />
                                    </p>
					           </g:HTMLPanel>
					        </g:FocusPanel>
					        <g:HTMLPanel>
						        <div class="form-horizontal">
						            <div class="control-group">
						                <label class="control-label">Name</label>
						                <div class="controls">
						                    <g:TextBox ui:field="projectNameTextBox" />
						                </div>
						            </div>

						            <div class="control-group">
						                <label class="control-label">Description</label>
						                <div class="controls">
						                    <g:TextArea ui:field="descriptionTextArea" visibleLines="10" />
						                </div>
						            </div>

						            <div class="control-group">
						                <div class="controls">
						                    <g:Button ui:field='updateButton'>Update</g:Button>
	                                        <g:Button ui:field='cancelButton'>Cancel</g:Button>
						                </div>
						            </div>
						        </div>
					        </g:HTMLPanel>
                        </g:DeckPanel>
                        Library URL:
                        <p>
                        <g:TextBox ui:field="libraryUrl" addStyleNames="{style.libraryUrl}"/>
                        </p>
                        Tracking ID:
                        <p>
                            <g:Label ui:field="trackingId"/>
                        </p>
                        <h2>Members</h2>
                        <g:FlexTable ui:field="members2"></g:FlexTable>

                        <g:HTMLPanel ui:field="addMemberPanel">
                            <div class="form-inline" style="padding-bottom: 1em;">
                                <g:SuggestBox ui:field="suggestBox" addStyleNames="{style.suggest}"/>
                                <g:Button ui:field="addMember">Add</g:Button>
                            </div>
                        </g:HTMLPanel>

                        <h2>Defold App</h2>
                        <div>
                           <g:Label ui:field="signedExeInfo"></g:Label>
                           <g:Anchor ui:field="iOSDownload">Install the Defold App</g:Anchor>
                        </div>
                        <p></p>

                        <h2>Activity</h2>
                        <g:FlexTable ui:field="commits2"></g:FlexTable>
                    </div>
                    <div class="span2">
                       <g:Button ui:field="deleteProject">Delete Project</g:Button>
                    </div>
                </div>
            </div>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
