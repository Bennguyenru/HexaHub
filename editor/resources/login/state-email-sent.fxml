<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane id="state-email-sent" styleClass="login-state" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <columnConstraints>
        <ColumnConstraints hgrow="ALWAYS" halignment="CENTER" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS" valignment="TOP" prefHeight="0" />
        <RowConstraints vgrow="NEVER" valignment="TOP" />
        <RowConstraints vgrow="ALWAYS" valignment="BOTTOM" prefHeight="0" />
    </rowConstraints>
    <VBox GridPane.rowIndex="1" styleClass="explanation-overlay">
        <fx:include source="globe-icon.fxml" />
        <Label styleClass="hero-text" text="We've sent you an e-mail with&#10;a password reset link." />
        <Button id="cancel-button" styleClass="df-button" text="Go Back">
            <VBox.margin>
                <Insets>
                    <top>24</top>
                    <bottom>16</bottom>
                </Insets>
            </VBox.margin>
        </Button>
    </VBox>
</GridPane>
