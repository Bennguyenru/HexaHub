<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox id="state-email-sent" styleClass="login-state" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
    <VBox VBox.vgrow="ALWAYS" maxWidth="-Infinity" />
    <VBox styleClass="explanation-overlay">
        <fx:include source="globe-icon.fxml" />
        <Label styleClass="hero-text" text="We've sent you an E-mail with&#10;a password reset link." />
        <Button id="cancel-button" styleClass="df-button" text="Go Back">
            <VBox.margin>
                <Insets>
                    <top>24</top>
                    <bottom>16</bottom>
                </Insets>
            </VBox.margin>
        </Button>
    </VBox>
    <VBox VBox.vgrow="ALWAYS" maxWidth="-Infinity" />
</VBox>
