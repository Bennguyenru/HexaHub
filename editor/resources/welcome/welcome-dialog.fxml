<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.*?>

<StackPane id="welcome-dialog" maxHeight="672" maxWidth="1000" minHeight="672" minWidth="1000" prefHeight="672" prefWidth="1000" stylesheets="/editor.css" xmlns="http://javafx.com/javafx/8">
    <HBox id="dialog-contents">
        <VBox id="left-pane">
            <VBox styleClass="defold-logo">
                <ImageView fitWidth="115" fitHeight="24">
                    <Image url="@defold-logo.png" />
                </ImageView>
            </VBox>

            <VBox id="pane-buttons-container" VBox.vgrow="ALWAYS" />
            <Button id="sign-out-button" text="Sign Out" styleClass="df-button, dim" maxWidth="1000" minHeight="30">
                <VBox.margin>
                    <Insets bottom="24.0" left="19.0" right="19.0" />
                </VBox.margin>
            </Button>
        </VBox>
    </HBox>

    <StackPane id="progress-overlay" visible="false" managed="false">
        <Region styleClass="background-cover" />
        <VBox alignment="CENTER" maxWidth="-Infinity">
            <VBox alignment="CENTER">
                <Label id="progress-header" text="Downloading Project" />
                <ProgressBar id="progress-bar" maxWidth="1.7976931348623157E308" />
                <Button id="progress-cancel-button" styleClass="df-button" text="Cancel Download" />
            </VBox>
        </VBox>
    </StackPane>
</StackPane>
