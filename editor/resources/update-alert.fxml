<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox prefHeight="50.0"
      prefWidth="500.0"
      spacing="12.0"
      stylesheets="@editor.css"
      xmlns="http://javafx.com/javafx/8"
      xmlns:fx="http://javafx.com/fxml/1">
    <children>
        <Label id="message" text="A newer version of Defold is available!" />
        <ProgressBar id="progress-bar"
                     minHeight="6.0"
                     prefHeight="6.0"
                     progress="0.0"
                     styleClass="really-small-progress-bar"
                     visible="false"
                     maxWidth="Infinity" />
        <HBox spacing="12.0">
            <children>
                <Button id="cancel"
                        minWidth="80.0"
                        mnemonicParsing="false"
                        text="Not Now"
                        cancelButton="true" />
                <Button id="ok"
                        minWidth="80.0"
                        mnemonicParsing="false"
                        text="Download and Restart"
                        defaultButton="true" />
            </children>
        </HBox>
    </children>
    <padding>
        <Insets bottom="12.0" left="12.0" right="12.0" top="12.0" />
    </padding>
</VBox>
