#! /usr/bin/env python

from waf_dynamo import dmsdk_add_files
from BuildUtility import create_build_utility

def configure(conf):
    pass

def build(bld):
    build_util = create_build_utility(bld.env)
    bld.stlib(features        = 'cxx cstaticlib ddf',
              includes        = ['.', '..', '../proto'],
              proto_gen_py    = True,
              protoc_includes = '../proto',
              target          = 'rig',
              install_path    = build_util.get_library_path(),
              use             = 'DDF DLIB PLATFORM_SOCKET',
              source          = 'rig.cpp ../proto/rig/rig_ddf.proto')

    bld.add_group()

    # We only need this library in the editor
    is_host = bld.env['PLATFORM'] in ('x86_64-linux', 'x86_64-win32', 'x86_64-darwin')

    if is_host:
        bld.shlib(features        = 'cxx ddf',
                  includes        = ['.', '..', '../proto'],
                  target          = 'rig_shared',
                  protoc_includes = '../proto',
                  install_path    = build_util.get_library_path(),
                  use             = 'DDF DLIB PROFILE_NULL PLATFORM_SOCKET',
                  source          = 'rig.cpp ../proto/rig/rig_ddf.proto')

    bld.install_files('${PREFIX}/include/rig', 'rig.h')
    bld.install_files('${PREFIX}/share/proto', '../proto/rig/rig_ddf.proto')

    bld.recurse('test')

    dmsdk_add_files(bld, '${PREFIX}/sdk/include/dmsdk', 'dmsdk')
