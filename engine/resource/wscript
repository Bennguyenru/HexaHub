#! /usr/bin/env python

VERSION='0.1'
APPNAME='resource'

srcdir = '.'
blddir = 'build'

import os, subprocess
import sys
sys.path = ["src"] + sys.path
import urllib, time, atexit
from waflib.Logs import error
import waflib.Options
import waf_dynamo, waf_ddf, waf_resource

os.environ['PATH'] = os.path.abspath('src') + os.pathsep + os.environ['PATH']

def init(ctx):
    pass

def options(opt):
    opt.load('waf_dynamo')

def configure(conf):
    conf.load('waf_dynamo')
    conf.load('waf_resource')
    conf.load('java')

    waf_ddf.configure(conf)

    conf.recurse('src')

    conf.env.append_value('INCLUDES', "default/src")
    conf.env['STATICLIB_DLIB'] = ['dlib', 'mbedtls', 'zip']
    conf.env['STATICLIB_DDF'] = 'ddf'

    conf.env.append_unique('CCDEFINES', 'DLIB_LOG_DOMAIN="RESOURCE"')
    conf.env.append_unique('CXXDEFINES', 'DLIB_LOG_DOMAIN="RESOURCE"')

def build(bld):
    bld.recurse('src')

def kill_proc(proc):
    proc.kill()

def shutdown(self):
    if not 'build' in waflib.Options.commands or getattr(waflib.Options.options, 'skip_tests', False):
        return

    proc = subprocess.Popen(["python", "-m", "SimpleHTTPServer", "6123"],
                            shell = False,
                            cwd = "build/default/src/test")
    atexit.register(kill_proc, proc)

    start = time.time()
    while True:
        if time.time() - start > 5:
            error('HTTP server failed to start within 5 seconds')
            sys.exit(1)
        try:
            urllib2.urlopen('http://localhost:6123')
            break
        except urllib2.URLError:
            print('Waiting for HTTP testserver to start...')
            sys.stdout.flush()
            time.sleep(0.5)

    waf_dynamo.run_tests(valgrind = True)
