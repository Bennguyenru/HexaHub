#! /usr/bin/env python

import waf_dynamo

VERSION = '0.1'
APPNAME = 'testmain'

srcdir = '.'
blddir = 'build'

def init(ctx):
    pass

def options(opt):
    opt.load('waf_dynamo')
    opt.recurse('src')

def configure(conf):
    conf.load('waf_dynamo')
    conf.recurse('src')

def build(bld):
    bld.recurse('src')

def shutdown(self):
    waf_dynamo.run_tests(valgrind = True)
