#! /usr/bin/env python
import os, waflib.Options

def configure(conf):
    pass

def build(bld):
    # if not desktop
    if not bld.env.PLATFORM in ('x86_64-win32', 'x86_64-macos', 'arm64-macos', 'x86_64-linux'):
        return

    if not waflib.Options.options.with_vulkan:
        bld.recurse('gdc')

    bld.recurse('launcher')
    bld.recurse('texconvert')
