#! /usr/bin/env python
import os

def configure(conf):
    platform = conf.env['PLATFORM']
    if platform == "win32":
        conf.env.append_value('LINKFLAGS', ['/subsystem:windows'])

def build(bld):
    script = bld.new_task_gen(features = 'cc cxx cprogram',
                              uselib = 'DLIB',
                              source = 'launcher.cpp',
                              target = 'launcher')
