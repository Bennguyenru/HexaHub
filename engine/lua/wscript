#! /usr/bin/env python

VERSION='0.1'
APPNAME='lua'

srcdir = '.'
blddir = 'build'

import sys
import waf_dynamo, waf_ddf

def init(ctx):
    pass

def options(opt):
    opt.tool_options('waf_dynamo')
    opt.sub_options('src')

def configure(conf):
    conf.check_tool('waf_dynamo')
    conf.recurse('src')

def build(bld):
    bld.recurse('src')
