def configure(conf):
    pass

def build(bld):
    physics = bld.new_task_gen(features = 'cxx cstaticlib',
                               use_lib = 'DLIB  BULLET',
                               includes = '. ../bullet ../box2d',
                               proto_gen_py = True,
                               target = 'physics')
    physics.find_sources_in_dirs('.')
    physics.source = [x for x in physics.source if not 'physics_null.cpp' in x]

    physics_null = bld.new_task_gen(features = 'cxx cstaticlib',
                                    use_lib = 'DLIB',
                                    includes = '.',
                                    proto_gen_py = True,
                                    source = ['physics_common.cpp', 'physics_null.cpp'],
                                    target = 'physics_null')

    bld.install_files('${PREFIX}/include/physics', 'physics.h')
    bld.install_files('${PREFIX}/lib/python', 'waf_physics.py')

    bld.add_subdirs('test')
